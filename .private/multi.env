# Determine how long the instance should be deleted from memory in case of no connection.
# Default time: 5 minutes
# If you don't even want an expiration, enter the value false
INSTANCE_EXPIRATION_TIME=false

# Name that will be displayed on smartphone connection
CONFIG_SESSION_PHONE_CLIENT=Edge
CONFIG_SESSION_PHONE_NAME=FULLWARE-API

# Set qrcode display limit
QRCODE_LIMIT=5
QRCODE_EXPIRATION_TIME=60 # seconds

# Maximun time to connect to whatsapp
CONNECTION_TIMEOUT=300 # seconds

AUTHENTICATION_GLOBAL_AUTH_TOKEN=dFhP7ocstxh3Sscefew4FZTCu4ehnM8gh3a

# 0 = never expires | 3600 = 1 hour | 86400 = 1 day | 604800 = 1 week
AUTHENTICATION_JWT_EXPIRES_IN=0
AUTHENTICATION_JWT_SECRET=1FAYwe-fw63nw4w8e-YrhDox

REDIS_ENABLED=false
